<div class="container">
  <h1>Glucose Levels <small><%= @user.name %></small></h1>
  <p><%= link_to "Add New", new_glucose_level_path %></p>

  <%= render 'search' %>

  Minimum reading: <%= @min %> <br />
  Maximum reading: <%= @max %><br />
  Average reading: <%= @avg %><br /><br />

  <% sl = 0 %>

  <div class="table-responsive">
    <table class="table table-striped table-bordered">
      <tr>
        <th>Sl No.</th>
        <th>Value</th>
        <th>Date</th>
      </tr>
      <% @glucose_levels.each do |glucose_level| %>
        <tr>
          <td><%= sl += 1 %></td>
          <td><%= glucose_level.value %></td>
          <td><%= glucose_level.created_at.strftime('%d-%B-%Y %H:%M:%S %p') %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
